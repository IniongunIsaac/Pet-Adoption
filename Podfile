# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Pet Adoption' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Pet Adoption
  
  pod 'Swinject'
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxSwiftExt', '~> 5'
  
  #Image loading and caching library
  pod 'Kingfisher'
  
  pod 'Alertift', '~> 4.1'
  pod 'DatePicker'
  pod 'MBCheckboxButton'

  target 'Pet AdoptionTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Pet AdoptionUITests' do
    # Pods for testing
  end
  
  
  target 'Repository' do
    use_frameworks!

    # Pods for Repository
    pod 'RxSwift', '~> 5'
    pod 'RxCocoa', '~> 5'

    target 'RepositoryTests' do
      inherit! :search_paths
      # Pods for testing
      pod 'RxBlocking', '~> 5'
      pod 'RxTest', '~> 5'
    end

  end
  
  target 'Remote API' do
    use_frameworks!

    # Pods for Repository
    pod 'RxSwift', '~> 5'
    pod 'RxCocoa', '~> 5'

    target 'Remote APITests' do
      inherit! :search_paths
      # Pods for testing
      pod 'RxBlocking', '~> 5'
      pod 'RxTest', '~> 5'
    end

  end

end
